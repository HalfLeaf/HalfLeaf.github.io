// align support
.custom-block
  &.left
    text-align left

  &.center
    text-align center

  &.right
    text-align right

// footnote anchor fix
.footnotes .footnotes-list .footnote-item
  margin-top (- $navbarHeight)
  padding-top ($navbarHeight + 0.5rem)

  p
    margin-bottom 0

.footnote-ref
  position relative
  margin-top - $navbarHeight - 0.5rem
  padding-top (($navbarHeight + 0.5rem))

  .footnote-anchor
    position absolute
    top 0

// katex fix
.katex
  font-size 1.05em

.katex-display
  padding-top 0.08em
  padding-bottom 0.08em
  overflow-x auto
  overflow-y hidden
  -webkit-overflow-scrolling touch

  .katex
    font-size 1.21em
