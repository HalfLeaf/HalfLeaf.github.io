.theme-dark
  // 提示框
  .custom-block
    &.tip, &.warning, &.danger, &.details
      background-color lighten($nightBgColor, 15%)

      a
        color var(--accent-color)

    &.warning
      color darken(#ffe564, 50%)

      .custom-block-title
        color darken(#ffe564, 40%)

    &.danger
      color darken(red, 15%)

      .custom-block-title
        color darken(red, 5%)

    &.details
      color var(--text-color)
